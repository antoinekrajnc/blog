<div class="d-flex flex-column align-items-center">
  <h2 class="d-flex justify-content-center m-5">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="d-flex justify-content-end m-4 mr-5">
      <%= f.label :email, class:"mr-2" %><br />
      <%= f.email_field :email, autofocus: true, class:"rounded" %>
    </div>

    <div class="d-flex justify-content-end m-4 mr-5">
      <%= f.label :password, class:"mr-2" %><br />
      <%= f.password_field :password, autocomplete: "off", class:"rounded"  %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="d-flex justify-content-center align-items-center m-4">
        <%= f.check_box :remember_me, class:"mr-2" %>
        <%= f.label :remember_me, class:"align-self-center mb-0" %>
      </div>
    <% end -%>

    <div class="d-flex justify-content-center m-4">
      <%= f.submit "Log in", class:"btn btn-success" %>
    </div>
  <% end %>

  <%= render "admins/shared/links" %>
</div>
