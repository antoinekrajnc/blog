  </head>

  <body>

    <nav class="navbar navbar-toggleable-md navbar-inverse sticky-top">
      <div class="d-flex flex-row justify-content-around">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <span class="navbar-text ml-5">
          <%= link_to "VNAK", posts_path, class:"text-white"%>
        </span>
      </div>
        <div class="collapse navbar-collapse justify-content-end" id="navbarTogglerDemo01">
          <ul class="navbar-nav mt-2 mt-lg-0">
            <li class="nav-item">
              <%=link_to "Entrepreneurship", entrepreneurship_path, class:"nav-link"%>
            </li>
            <li class="nav-item">
              <%=link_to "Startups", startups_path, class:"nav-link"%>
            </li>
            <li class="nav-item">
              <%=link_to "Become an Entrepeneur", learn_path, class:"nav-link"%>
            </li>
            <form class="d-flex flex-row ml-5 mr-5" style="height: 2.1rem;" method="POST" action="https://formspree.io/contact@vnak.co">
              <input class="form-control mr-2" style="width: 12rem;" type="email" placeholder="Email" name="Email">
              <button class="btn btn-outline-success align-self-center" type="submit">Follow</button>
              <input type="hidden" name="_next" value="vnak.co" />
            </form>
          </ul>
        </div>
    </nav>
    <%= yield %>

    <footer class="d-flex flex-row rounded-top">
      <div class="categories-footer col-4 mt-3">
        <h6 class="footer-title">Categories</h6>
        <ul class="footer-list list-unstyled">
          <li><%=link_to "Entrepreneurship", entrepreneurship_path, class:"footer-link"%></li>
          <li><%=link_to "Startups", startups_path, class:"footer-link"%></li>
          <li><%=link_to "Become an Entrepeneur", learn_path, class:"footer-link"%></li>
        </ul>
      </div>
      <div class="contact-footer col-4 mt-3">
        <h6 class="footer-title">About</h6>
        <ul class="footer-list list-unstyled">
          <li><a class="footer-link" href="#">Authors</a></li>
          <li><%=link_to "Partnerships", contact_path, class:"footer-link"%></li>
          <li><a class="footer-link" href="#">Terms</a></li>
          <li><%=link_to "Contact", contact_path, class:"footer-link"%></li>
        </ul>
      </div>
        <div class="social-media-footer col-4 mt-3">
          <h6 class="footer-title">Follow us</h6>
          <ul class="footer-list list-unstyled">
            <li><a class="footer-link" href="https://www.facebook.com/VNAK-1213349072121802/">Facebook</a></li>
            <li><a class="footer-link" href="https://twitter.com/VNAK_blog">Twitter</a></li>
            <li><a class="footer-link" href="https://www.linkedin.com/company-beta/18117507">LinkedIn</a></li>
          </ul>
      </div>
    </footer>
