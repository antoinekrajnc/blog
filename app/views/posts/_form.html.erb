<%= simple_form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:" %>
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mb-3">
    <%= f.label :image, class:"mr-4" %>
    <%= f.file_field :avatar %>
  </div>

  <div class="d-flex justify-content-end mb-3 mr-5 form-input">
    <%= f.input :title %>
  </div>

  <div class="d-flex justify-content-end mb-3 mr-5 form-input">
    <%= f.input :subtitle, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-center mb-3">
    <%= f.input :content, as: :ckeditor, input_html: {ckeditor: {toolbar: 'FULL'}} %>
  </div>

  <div class="d-flex justify-content-center mb-3">
    <%=f.label :Category, class:"mr-4 mt-2" %>
    <%=f.select :category, options_for_select(["ProductivitÃ©", "Entrepreneuriat", "Good To Know"])%>
  </div>

  <div class="d-flex justify-content-center m-5">
    <%= f.button :submit, class:"btn-success rounded create-post-btn" %>
  </div>
<% end %>
