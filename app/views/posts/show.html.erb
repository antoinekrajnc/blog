<head>
  <title><%=@post.title%></title>
  <meta name="description" content="<%=@post.subtitle%>">
  <meta property="fb:app_id" content="115489915741819" />
</head>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.9";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<p id="notice"><%= notice %></p>

<div class="d-flex flex-column justify-content-center align-items-center m-5 text-justify">
  <h1><%=@post.title %></h1>
  <p class="mt-3"><%=@post.created_at.strftime("Published on %m/%d/%Y") %></p>
</div>

<div class="d-flex justify-content-center mb-5">
  <% if @post.avatar_file_name != nil%>
    <%= image_tag @post.avatar.url(:large), {style: "width: 75%; height:20%;"}%>
  <%end%>
</div>

<!-- Share buttons BEGIN -->
<div class="a2a_kit a2a_kit_size_32 a2a_default_style" id="share-ul">
  <ul class="nav d-flex flex-column ml-3">
    <li class="nav-item m-2"><a class="a2a_dd" href="https://www.addtoany.com/share"></a></li>
    <li class="nav-item m-2"><a class="a2a_button_facebook"></a></li>
    <li class="nav-item m-2"><a class="a2a_button_twitter"></a></li>
    <li class="nav-item m-2"><a class="a2a_button_kindle_it"></a></li>
  </ul>
</div>
<script async src="https://static.addtoany.com/menu/page.js"></script>
<!-- Share Buttons END -->

  <div class="post-content d-flex flex-column col-9">
    <%= raw @post.content %>
  </div>

  <div class="d-flex justify-content-center mb-5">
    <%= link_to 'Back', posts_path, class:"back-link" %>
  </div>

  <div class="fb-comments d-flex col-9 mb-5" data-width="100%" data-href="http://www.vnak.co/posts" data-numposts="5"></div>


<script>
var span = document.getElementById("share-ul");
span.style.display = "none";

document.addEventListener("scroll", function() {
    if (document.body.scrollTop > 600) {
        span.style.display = "block";
    }
    else {
        span.style.display = "none";
    }
});
</script>
